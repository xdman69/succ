<Page x:Class="Uctenkovka.Future"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Uctenkovka"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="Future">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Nový výdaj" HorizontalAlignment="Right" Margin="10" VerticalAlignment="Top" Width="106" Grid.Column="1" Grid.Row="0"/>
        <ListView HorizontalAlignment="Stretch" Margin="10" VerticalAlignment="Stretch" BorderThickness="5" Grid.Column="0" Grid.Row="0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Smazat výdaj" HorizontalAlignment="Right" Margin="0,50,10,0" VerticalAlignment="Top" Width="117" Grid.Column="1"/>
    </Grid>
</Page>
