<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.AddTask">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" HorizontalOptions="StartAndExpand">
            <StackLayout BackgroundColor="#1976D2" Padding="10, 20, 0, 0">
                <Label Text="Add Task" HeightRequest="60" TextColor="White" FontSize="50" FontAttributes="Bold"></Label>
            </StackLayout>
            <Label Text="Task Name"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>